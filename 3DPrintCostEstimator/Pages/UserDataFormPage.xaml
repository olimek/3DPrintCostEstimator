<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FDMPrintCostEstimator.Pages.UserDataFormPage"
             Title="Dane użytkownika">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Koszt 1 kWh"
                   FontAttributes="Bold" />

            <Entry x:Name="CostEntry"
                   Keyboard="Numeric"
                   Placeholder="np. 0.95" />

            <Label Text="Symbol waluty"
                   FontAttributes="Bold" />

            <Entry x:Name="CurrencyEntry"
                   Placeholder="np. zł" />

            <Button Text="Zapisz"
                    Clicked="SaveButton_Clicked"
                    BackgroundColor="#007ACC"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="45" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>